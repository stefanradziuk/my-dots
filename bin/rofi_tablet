#!/usr/bin/env bash

options="keyboard
rofi launcher
screen flip
screenshot
map touch to monitor
hide polybar
power menu
exit tablet mode"

selection=$(echo -e "${options}" | rofi -dmenu -p "ïš³" -lines "$(wc -l <<< "$options")")

echo "This is your selection: $selection"

case "${selection}" in
  "")
    exit 0;;
  "screen flip")
    /home/stefan/bin/flip_screen;;
  "keyboard")
    onboard;;
  "rofi launcher")
    rofi -show run;;
  "screenshot")
    /home/stefan/bin/sscrot;;
  "map touch to monitor")
    /home/stefan/bin/rofi_dualmonitor_touch;;
  "hide polybar")
    killall polybar;;
  "exit tablet mode")
    /home/stefan/.config/polybar/launch.sh;;
  "power menu")
    /home/stefan/bin/rofi_powermenu;;
  *)
    rofi -e "unknown command: '$selection'";;
esac
