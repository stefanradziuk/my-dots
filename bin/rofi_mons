#!/usr/bin/env bash

options="extend top
extend right
duplicate
primary only
secondary only"

selection=$(echo -e "${options}" | rofi -dmenu -p "monitors" -lines 5)

echo "This is your selection: $selection"

case "${selection}" in
    "primary only")
        mons -o;;
    "secondary only")
        mons -s;;
    "duplicate")
        mons -d;;
    "extend right")
        mons -e right;;
    "extend top")
        mons -e top;;
esac

/home/stefan/bin/touch_mapper eDP1
