#!/usr/bin/env bash

options="extend
duplicate
primary only
secondary only"

selection=$(echo -e "${options}" | rofi -dmenu -p "monitors" -lines 4)

echo "This is your selection: $selection"

case "${selection}" in
    "primary only")
        mons -o;;
    "secondary only")
        mons -s;;
    "duplicate")
        mons -d;;
    "extend")
        mons -e right;;
esac
